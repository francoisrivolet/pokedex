{% block body %}
    <h1>Pokemon</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ pokemon.numero }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ pokemon.nom }}</td>
            </tr>
            <tr>
                <th>Nomen</th>
                <td>{{ pokemon.nomEn }}</td>
            </tr>
            <tr>
                <th>Poids</th>
